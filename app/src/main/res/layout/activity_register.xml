<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registerActivity"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@color/whiteColor">
    <include
        layout="@layout/toolbar"
        android:id="@+id/toolbar"
        />


    <ScrollView android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:fillViewport="true"
        android:overScrollMode="never">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginTop="10dp"
                android:id="@+id/linearshit"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                >





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:hint="First name"
                        android:fontFamily="@font/poppins_medium"
                        android:id="@+id/prenom"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColorHint="#3f3f3f">
                        <android.support.design.widget.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            />

                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:hint="Last name"
                        android:id="@+id/nom"
                        android:fontFamily="@font/poppins_medium"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColorHint="#3f3f3f" >
                        <android.support.design.widget.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            />

                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>

                <Spinner
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:id="@+id/sexeSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:paddingTop="20dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_marginBottom="5dp"
                    android:textColorHint="#3f3f3f"
                    android:spinnerMode="dropdown"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_ddn"
                    android:paddingTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColorHint="#3f3f3f"
                    android:fontFamily="@font/poppins_medium"
                    android:hint="Date of birth"
                    android:inputType="phone"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:clickable="true"
                    android:onClick="pickDate"
                    >
                    <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />

                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:paddingTop="20dp"
                    android:inputType="phone"
                    android:fontFamily="@font/poppins_medium"
                    android:textColorHint="#3f3f3f"
                    android:hint="Phone number"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp" >
                    <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#3f3f3f"
                    android:fontFamily="@font/poppins_medium"
                    android:singleLine="true"
                    android:paddingTop="20dp"
                    android:hint="Mail address"
                    android:inputType="textEmailAddress"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp" >
                    <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_password"
                    android:paddingTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColorHint="#3f3f3f"
                    android:hint="Password"
                    android:fontFamily="@font/poppins_medium"
                    android:inputType="textPassword"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp" >
                    <com.subhrajyoti.passwordview.PasswordView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:eyeTint="@color/colorPrimaryDark"/>

                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:hint="Address"
                        android:id="@+id/adresse"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:fontFamily="@font/poppins_medium"
                        android:textColorHint="#3f3f3f" >
                        <android.support.design.widget.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            />

                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:hint="City"
                        android:id="@+id/ville"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:fontFamily="@font/poppins_medium"
                        android:textColorHint="#3f3f3f" >
                        <android.support.design.widget.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            />

                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>

                <Button
                    android:id="@+id/creeCompte"
                    android:layout_width="fill_parent"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_height="wrap_content"
                    android:text="Create account"
                    android:background="@drawable/typical_button"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_marginTop="40dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginBottom="20dp"
                    />






            </LinearLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/linearshit">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:paddingBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Already have an account ?"
                        android:textColor="@color/blackColor"
                        android:fontFamily="@font/poppins_medium"
                        />
                    <TextView
                        android:paddingLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sign in"
                        android:textColor="@color/colorPrimary"
                        android:clickable="true"
                        android:gravity="center"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_alignParentBottom="true"
                        android:onClick="goToLoginActivity"/>
                </LinearLayout>

            </android.support.constraint.ConstraintLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>